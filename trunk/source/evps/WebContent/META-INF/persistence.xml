<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="evp-dao" transaction-type="RESOURCE_LOCAL">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>com.evps.dataaccess.model.Action</class>
		<class>com.evps.dataaccess.model.ActionPK</class>
		<class>com.evps.dataaccess.model.Attachment</class>
		<class>com.evps.dataaccess.model.Audit</class>
		<class>com.evps.dataaccess.model.Organisation</class>
		<class>com.evps.dataaccess.model.OrganisationCurriculm</class>
		<class>com.evps.dataaccess.model.OrganisationMember</class>
		<class>com.evps.dataaccess.model.AssessmentRequestDate</class>
		<class>com.evps.dataaccess.model.AssessmentRequestDatePK</class>
		<class>com.evps.dataaccess.model.AssesmentRequestPlan</class>
		<class>com.evps.dataaccess.model.AssessmentRequestStaff</class>
		<class>com.evps.dataaccess.model.AssessmentRequestStaffPK</class>
		<class>com.evps.dataaccess.model.AssessmentRequestRequest</class>
		<class>com.evps.dataaccess.model.Role</class>
		<class>com.evps.dataaccess.model.User</class>
		<class>com.evps.dataaccess.model.UserRole</class>
		<class>com.evps.dataaccess.model.UserRolePK</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/evpdb" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="krishna" />
		</properties>

	</persistence-unit>
</persistence>
